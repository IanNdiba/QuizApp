                        android:text="@string/javaRadioButton10"
                        android:textSize="15sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/javaSubmitButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="@string/submitButton"
                        android:textColor="@color/purple"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/javaForward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:src="@drawable/icons_next" />

                    <ImageButton
                        android:id="@+id/javaBackward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="15dp"
                        android:background="@color/white"
                        android:src="@drawable/icons_back" />

                    <ImageButton
                        android:id="@+id/mainHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/javaSubmitButton"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:src="@drawable/dog_house" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </android.support.v7.widget.CardView>

